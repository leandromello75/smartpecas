{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/jwt/*": ["src/types/jwt/*"],
      "@/types/*": ["src/types/*"],
      "@/common/*": ["src/common/*"],
      "@prisma-public": ["../node_modules/@prisma/client"],
      "@prisma-tenant": ["../node_modules/@prisma/tenant-client"]
    },
    "incremental": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
}
